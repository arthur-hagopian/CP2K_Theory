
&GLOBAL
  PROJECT H2O
  PRINT_LEVEL MEDIUM
  RUN_TYPE GEO_OPT
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep

  &SUBSYS
    &CELL
        ABC [angstrom] 25.0 25.0 25.0
        ALPHA_BETA_GAMMA 90.0 90.0 90.0
        PERIODIC NONE
    &END CELL

    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME structure.xyz
    &END TOPOLOGY

    &KIND O
       BASIS_SET TZV2P-MOLOPT-GTH
       POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND H
       BASIS_SET TZV2P-MOLOPT-GTH
       POTENTIAL GTH-PBE-q1
    &END KIND
  &END SUBSYS

  &DFT
    BASIS_SET_FILE_NAME /path/to/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /path/to/GTH_POTENTIALS

    CHARGE 0

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
    &END QS

    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON

    &MGRID
      CUTOFF 600
      REL_CUTOFF 80
      NGRIDS 5
    &END MGRID

    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 200
      ADDED_MOS 5
      CHOLESKY RESTORE

      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION

      &MIXING
          METHOD BROYDEN_MIXING
          ALPHA   0.2
          BETA    1.5
          NBUFFER 8
      &END MIXING
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_SMOOTH_RHO NN50
        XC_DERIV NN50_SMOOTH
      &END XC_GRID
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME /home/hagopian/cp2k/basis/dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

    &PRINT
      &PDOS ON
        NLUMO 5
        &LDOS
          LIST 1
        &END LDOS
        &LDOS
          LIST 2
        &END LDOS
        &LDOS
          LIST 3
        &END LDOS
      &END PDOS
    &END PRINT
  &END DFT
&END FORCE_EVAL

&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    OPTIMIZER BFGS
    MAX_ITER 200
    MAX_FORCE [eV/angstrom] 1.0E-3
    RMS_FORCE [eV/angstrom] 5.0E-4
    MAX_DR    [angstrom]    1.0E-2
    RMS_DR    [angstrom]    5.0E-3
  &END GEO_OPT
&END MOTION

