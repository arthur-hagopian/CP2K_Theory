
&GLOBAL
  PROJECT Pt_111
  PRINT_LEVEL MEDIUM
  RUN_TYPE GEO_OPT
&END GLOBAL

&FORCE_EVAL

  METHOD Quickstep

  &SUBSYS
    &CELL
        ABC [angstrom] 14.212846301849604 9.846948765988374 54.46284424642688
        ALPHA_BETA_GAMMA [deg] 90 90 90
    &END CELL

    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME structure.xyz
    &END TOPOLOGY

    &KIND Pt
       BASIS_SET DZVP-A5-Q10-323-MOL-T1-DERIVED_SET-1
       POTENTIAL GTH-PBE-q10
    &END KIND
  &END SUBSYS

  &DFT
    BASIS_SET_FILE_NAME /path/to/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /path/to/GTH_POTENTIALS

    CHARGE 0

    SURFACE_DIPOLE_CORRECTION .TRUE.
    SURF_DIP_DIR Z

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3
    &END QS

    &MGRID
      CUTOFF 400
      REL_CUTOFF 40
      NGRIDS 4
    &END MGRID

    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-6
      MAX_SCF 200
      ADDED_MOS 200
      CHOLESKY INVERSE

      &SMEAR ON
        METHOD FERMI_DIRAC 
        ELECTRONIC_TEMPERATURE [K] 500
      &END SMEAR
 
      &DIAGONALIZATION 
        ALGORITHM STANDARD 
      &END DIAGONALIZATION

      &MIXING 
          METHOD BROYDEN_MIXING 
          ALPHA   0.1
          BETA    1.5
          NBUFFER 8
      &END MIXING
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_SMOOTH_RHO NN50
        XC_DERIV NN50_SMOOTH
      &END XC_GRID
    &END XC

    &PRINT
      &V_HARTREE_CUBE ON
        STRIDE 8 8 1
        ADD_LAST SYMBOLIC
      &END V_HARTREE_CUBE
      &PDOS ON
        ADD_LAST SYMBOLIC
      &END PDOS
    &END PRINT
  &END DFT
&END FORCE_EVAL

&MOTION
  &CONSTRAINT
      &FIXED_ATOMS
        LIST  1..40
      &END FIXED_ATOMS
  &END CONSTRAINT

  &GEO_OPT
    TYPE MINIMIZATION
    OPTIMIZER BFGS
    MAX_FORCE [eV/angstrom] 1.0E-3
    RMS_FORCE [eV/angstrom] 5.0E-4
    MAX_DR    [angstrom]    1.0E-2
    RMS_DR    [angstrom]    5.0E-3
  &END GEO_OPT

  &PRINT
    &TRAJECTORY
      ADD_LAST SYMBOLIC
      &EACH
        GEO_OPT 5
      &END EACH
    &END TRAJECTORY
  &END PRINT
&END MOTION

